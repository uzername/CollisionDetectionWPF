<Window x:Class="WpfCollision.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCollision"
        mc:Ignorable="d"
        Title="Collision detection using BEPUphysics2" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <!-- for button control -->
            <RowDefinition Height="Auto"></RowDefinition>
            <!-- 3D display -->
            <RowDefinition Height="0.5*"></RowDefinition>
            <!-- grid splitter -->
            <RowDefinition Height="5"></RowDefinition>
            <!-- for text -->
            <RowDefinition Height="0.5*"></RowDefinition>

        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
            <Button Content="Start Collision detection" Margin="2" Name="ButtonSimulate" Click="ButtonSimulate_Click"/>
        </StackPanel>
        <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="0" Grid.Row="1">Here will be a 3D control</Label>
        <GridSplitter Grid.Column="0" Height="5" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Center"></GridSplitter>
        <TextBox Name="TextBoxLog" FontFamily="Lucida Console" VerticalScrollBarVisibility="Auto" Grid.Row="3" Grid.Column="0"></TextBox>
    </Grid>
</Window>
