<UserControl x:Class="WpfCollision.CollisionTestRenderer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfCollision"
             mc:Ignorable="d" 
             xmlns:h="http://helix-toolkit.org/wpf"
             d:DesignHeight="450" d:DesignWidth="800">
    <h:HelixViewport3D Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2" 
         x:Name="viewPort3d" ZoomExtentsWhenLoaded="true" ZoomCursor="Cross"
         ShowFieldOfView="False"
         ShowFrameRate="False" 
         InfiniteSpin="False" 
         IsHeadLightEnabled="True"
         InfoBackground="Transparent"
         CameraRotationMode="Trackball"
         ShowCoordinateSystem="True"
         CoordinateSystemLabelForeground="DarkGreen"
         Title=""
         SubTitle="" 
         TextBrush="Gray">
        <h:DefaultLights />
        <h:GridLinesVisual3D Width="30" Length="30"></h:GridLinesVisual3D>
    </h:HelixViewport3D>
</UserControl>
